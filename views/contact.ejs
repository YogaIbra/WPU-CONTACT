<% if (contact.length < 1) { %>
  <div class="alert alert-danger mt-4" role="alert">
    Data masih kosong
  </div>
<% } else {%>
<table class="table">
    <thead>
      <tr>
        <th scope="col">NO</th>
        <th scope="col">Nama</th>
        <th scope="col">No Absen</th>
        <th scope="col">Kelas</th>
        <th scope="col">Detail</th>
      </tr>
    </thead>
    <tbody>
         
        <% contact.forEach((wa, i) => { i++ %>
            <tr>
              <th scope="row"><%= i++ %> </th>
              <td><%= wa.nama %> </td>
              <td><%= wa.nomer %> </td>
              <td><%= wa.kelas %> </td>
              <td>
                <a href="/contact/<%= wa.nama %> ">
                  <button type="button" class="btn btn-success badge rounded-pill">
                    <i class="bi bi-info-circle"></i> Detail
                  </button>
                </a>
              </td>
            </tr>
        <% }) %>
          </tbody>
        </table>
<% } %> 